<div id="conteudo">
        <header>
            <h1>Cadastrar Produtos</h1>
        </header>
        <div id="forms">
            <form action="/add" method="post" id="form">
                <div class="inputNome">
                    <input type="text" name="nome" placeholder="Nome do Produto" required>
                </div>
                <div class="inputTamanho">
                    <!--<textarea name="descricao" cols="47" rows="10" placeholder="Descrição do Produto (Tamanhos, cores ...)" minlength="10" required></textarea>-->
                    <input type="number" name="tamanho" placeholder="Tamanhos" required>
                </div>
                <div class="inputCor">
                    <input type="text" name="cor" placeholder="Cores" required>
                </div>
                <div class="inputEstoque">
                    <input type="number" name="estoque" placeholder="Estoque" required>
                </div>
                <div class="inputPreco">
                    <input type="number" name="preco" placeholder="Preço do Produto" step="000.01" required>
                </div>
                <button type="submit" id="button">Cadastrar</button>
            </form>
        </div>
    </div>