<form action="/editar" method="post">
    <img src="../imagens/gamer.png" alt="">

    <input type="text" value={{dados.id}} name="id" class="form-control" readonly>
    <input type="text" value={{dados.nome}} class="form-control" name="nome" placeholder="Nome">
    <input type="text" value={{dados.idade}} class="form-control" name="idade" placeholder="Idade">
